<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--1、加载jdbc.properties-->
    <context:property-placeholder location="classpath:druid.properties"/>

    <!--2、配置数据源对象-->
    <bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
        <property name="maxWait" value="${jdbc.maxWait}"/>
        <property name="maxActive" value="${jdbc.maxActive}"/>
        <property name="initialSize" value="${jdbc.initialSize}"/>
    </bean>

    <!--3、配置JdbcTemplate对象-->
    <bean id="template" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"></property>
    </bean>

    <!--配置dao层对象-->
    <bean id="categoryDao" class="cn.itcast.travel.dao.impl.CategoryDaoImpl">
        <property name="template" ref="template"/>
    </bean>
    <bean id="favoriteDao" class="cn.itcast.travel.dao.impl.FavoriteDaoImpl">
        <property name="template" ref="template"/>
    </bean>
    <bean id="userDao" class="cn.itcast.travel.dao.impl.UserDaoImpl">
        <property name="template" ref="template"/>
    </bean>
    <bean id="routeDao" class="cn.itcast.travel.dao.impl.RouteDaoImpl">
        <property name="template" ref="template"/>
    </bean>
    <bean id="routeImgDao" class="cn.itcast.travel.dao.impl.RouteImgDaoImpl">
        <property name="template" ref="template"/>
    </bean>
    <bean id="sellerDao" class="cn.itcast.travel.dao.impl.SellerDaoImpl">
        <property name="template" ref="template"/>
    </bean>

    <!--配置service层对象-->
    <bean id="categoryService" class="cn.itcast.travel.service.impl.CategoryServiceImpl">
        <property name="categoryDao" ref="categoryDao"/>
    </bean>
    <bean id="favoriteService" class="cn.itcast.travel.service.impl.FavoriteServiceImpl">
        <property name="favoriteDao" ref="favoriteDao"/>
        <property name="routeDao" ref="routeDao"/>
    </bean>
    <bean id="routeService" class="cn.itcast.travel.service.impl.RouteServiceImpl">
        <property name="favoriteDao" ref="favoriteDao"/>
        <property name="sellerDao" ref="sellerDao"/>
        <property name="routeImgDao" ref="routeImgDao"/>
        <property name="routeDao" ref="routeDao"/>
    </bean>
    <bean id="userService" class="cn.itcast.travel.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>


</beans>

